<div id="<%= dom_id book %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= book.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Image:</strong>
    <%= book.image %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Publishing:</strong>
    <%= book.publishing %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this book", book, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this book", edit_book_path(book), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
